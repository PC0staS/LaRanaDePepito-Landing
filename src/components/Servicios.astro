---
import Servicio from './Servicio.jsx';
import Trayectoria from './Trayectoria.jsx';

---

<section class="py-5 section-alt mb-0" id="servicios">
    <div class="container">
        <div class="text-center mb-5 fade-up">
            <h2 class="display-5 mb-3" style="font-family:var(--font-serif);">
                Servicios
            </h2>
            <div class="divider-ornamental">✂</div>
            <p
                class="text-muted-soft mb-0"
                style="max-width:640px; margin:0 auto;"
            >
                Confección y ajustes infantiles con acabados delicados, tejidos
                cómodos y detalles que acompañan cada etapa.
            </p>
        </div>
        <div class="row g-4">

            <Servicio
                id="01"
                title="Ajustes & Crecimientos"
                description="Alargar bajos, ensanchar, adaptar el talle o modificar cierres para prolongar la vida de sus prendas favoritas."
                hrefweb="#contact"
                hreftext="Consultar →"
            />
            <Servicio
                id="02"
                title="Confección a Medida Infantil"
                description="Vestidos, conjuntos, ranitas, camisas y piezas únicas diseñadas para moverse, jugar y lucir impecables."
                hrefweb="#galeria"
                hreftext="Ver ejemplos →"
            />
            <Servicio
                id="03"
                title="Ceremonia & Eventos Infantiles"
                description="Conjuntos para comunión y celebraciones familiares: tejidos suaves, forros cómodos y acabados impecables."
                hrefweb="#galeria"
                hreftext="Ver ejemplos →"
            />
            <Servicio
                id="04"
                title="Reciclaje & Personalización"
                description="Transformar prendas heredadas, añadir bordados, iniciales o detalles especiales que las hacen únicas y afectivas."
                hrefweb="#contact"
                hreftext="Pedir valoración →"
            />
            <Servicio
                id="05"
                title="Reformas & Adaptaciones"
                description="Ajustes en prendas existentes para un mejor calce y comodidad, sin perder la esencia del diseño original."
                hrefweb="#contact"
                hreftext="Pedir valoración →"
            />
        </div>

        <div class="row mt-5 g-4 fade-up">
            <div class="col-12 text-center mb-3">
                <h2
                    class="h5 text-uppercase tracking-wide"
                    style="letter-spacing:3px; font-family:var(--font-sans); color:var(--color-text-muted);"
                >
                    Confianza & Experiencia
                </h2>
            </div>
            <Trayectoria titulo="15+" texto="Años" />
            <Trayectoria titulo="500+" texto="Prendas" />
            <Trayectoria titulo="98%" texto="Satisfacción" />
            <Trayectoria titulo="300+" texto="Clientas" />
            </div>
        </div>
    </div>
</section>
